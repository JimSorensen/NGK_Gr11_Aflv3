@model IEnumerable<Observations>

@{
    ViewData["Title"] = "Index";
}

<h1>Create New Observations</h1>

<p>
	<a asp-action="Create">Create New Observations</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Temperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Humidity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirPressure)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Temperature)
            </td>
			<td>
				@Html.Raw(item.Description)
			</td>
            <td>
                @Html.DisplayFor(modelItem => item.Humidity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirPressure)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
			<td>
				
				<a asp-action="Details" asp-route-id="@item.ObservationsId">Details</a>
				<a class="confirmDeletion" asp-action="Delete" asp-route-id="@item.ObservationsId">Delete</a>
			</td>
        </tr>
}
    </tbody>
</table>
